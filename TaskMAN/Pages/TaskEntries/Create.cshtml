@page
@model TaskMAN.Pages.TaskEntries.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Lisää tehtävä</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TaskEntry.Description" class="control-label">Tehtävän kuvaus</label>
                <input asp-for="TaskEntry.Description" class="form-control" />
                <span asp-validation-for="TaskEntry.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Tallenna" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Takaisin</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
